<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LocalMarket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>
   <style name="MyButtonStyle" parent="Theme.LocalMarket">
       <item name="android:textAllCaps">false</item>
       <item name="android:background">@color/accent</item>
    </style>

    <style name="NoStyle" parent="Theme.LocalMarket">
        <!-- No se define ningún atributo -->
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.Underlined">

        <item name="colorControlNormal">@color/black</item> <!-- Color de la flecha -->
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/MyCustomHintAppearance</item>
        <!-- Otros elementos de personalización -->
    </style>

    <style name="MyCustomHintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <!-- Otros elementos de personalización -->
    </style>



    <style name="Theme.LocalMarket" parent="Base.Theme.LocalMarket" />
</resources>